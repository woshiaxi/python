print(pillow,id(pillow))

# 变量赋值
name = '阿西'
print(id(name))
print(name)

name = name + 'Janice'
print(id(name))
print(name)

# 变量命名原则
import keyword
keyword.kwlist

# 变量建议下划线间隔 dog_name
# 函数建议小驼峰 homeAddress
# 类建议大驼峰 AnimalType

# 字符串切片
word_1 = '我的名字是阿西'
word_2 = '20201207'
print(len(word_1))

print(word_1[0])
print(word_1[2:7])
print(word_1[0:2])
print(word_1[-1])
print(word_1[:4])
print(word_1[2:])

print(word_2)
new_number = word_2[0:4]
print(new_number)

test1 = 'abc'
test1
